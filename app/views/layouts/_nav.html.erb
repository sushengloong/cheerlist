<div id="nav_bg">
	<div id="nav">
		<%= link_to image_tag("logo.png", :alt => "CheerList Logo", :id => "logo"), root_path %>
		<div id="nav_links">
			<ul>
				<li>
					<%= link_to "Home", root_path %>
				</li>
				<li>
					<%= link_to "Games", root_path %>
				</li>
				<li>
					<%= link_to "Leaderboard", root_path %>
				</li>
				<% if user_signed_in? %>
				<li>
          <%= link_to "Profile", profile_path(current_user.id) %>
        </li>
				<% else %>
				<li>
					<%= link_to "Sign Up", new_user_registration_path %>
				</li>
				<% end %>
			</ul>
		</div>
		<div id="user_nav">
			<% if user_signed_in? %>
			Signed in as <%= current_user.email %>.
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
			<% else %>
			Have an account? <%= link_to "Login", "#login_form", :id => "login_link" %>
			<% end %>
		</div>
	</div>
</div>