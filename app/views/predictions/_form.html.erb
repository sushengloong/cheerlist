<%= form_for [@game, @prediction] do |f| %>
  <% if @prediction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

      <ul>
      <% @prediction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :home_score, :class => "prediction_score_input" %>
    <%= f.label :home_score, @game.home_team.name %>
      VS 
    <%= f.label :away_score, @game.away_team.name %>
    <%= f.text_field :away_score, :class => "prediction_score_input" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
