<div id="search" class="content_pane">
  <h1>Search for Your Favourite Games!</h1>
  <%= form_tag games_search_path, :method => :get, :id => "games_search_form" do %>
    <p>
      <%= text_field_tag :search, params[:search] || "Manchester United" %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
  <%= gmaps("map_options" => { 
                  "detect_location" => false,
                  "auto_zoom" => false,
                  "zoom" => 10
            }, "markers" => { 
                  "data" => @json 
            }) %>
</div>
<div class="content_pane">
  <h1>Recent Activity</h1>
  <div id="recent_activities">
    <%= render @activities %>
  </div>
</div>